<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgmain"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Olá,"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tvUserMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout11"
        app:layout_constraintVertical_bias="0.566">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btLuzMain"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_margin="12dp"
                android:background="@drawable/bgbtmain"
                android:drawableTop="@drawable/lampada__5_"
                android:fontFamily="sans-serif-smallcaps"
                android:paddingTop="15dp"
                android:text="LUZ"
                android:textColor="#6D6D6C"
                android:textSize="24sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btAguaMain"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_margin="12dp"
                android:background="@drawable/bgbtmain"
                android:drawableTop="@drawable/agua"
                android:fontFamily="sans-serif-smallcaps"
                android:paddingTop="15dp"
                android:text="ÁGUA"
                android:textColor="#6D6D6C"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btRacaoMain"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_margin="12dp"
                android:background="@drawable/bgbtmain"
                android:drawableTop="@drawable/comida_de_peixe__2_"
                android:fontFamily="sans-serif-smallcaps"
                android:paddingTop="15dp"
                android:text="RAÇÃO"
                android:textColor="#6D6D6C"
                android:textSize="24sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btPerfilMain"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_margin="12dp"
                android:background="@drawable/bgbtmain"
                android:drawableTop="@drawable/perfil"
                android:fontFamily="sans-serif-smallcaps"
                android:paddingTop="15dp"
                android:text="PERFIL"
                android:textColor="#6D6D6C"
                android:textSize="24sp" />
        </TableRow>

    </TableLayout>

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/linearLayout11"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/peixin_black_transparente" />
</androidx.constraintlayout.widget.ConstraintLayout>